# ─── Competition-Ready AI Chatbot Configuration ───
# Copy this file to .env and fill in your values.

# ── App Settings ──
APP_NAME="AI Assistant"
APP_DESCRIPTION="Your intelligent AI-powered assistant"
SECRET_KEY="change-me-to-a-random-secret-key"
DEMO_MODE=true

# ── Database ──
DATABASE_URL="sqlite:///./chatbot.db"

# ── AI Model Settings (update these for each competition) ──
DEFAULT_MODEL="gpt-4o"
SYSTEM_PROMPT="You are a helpful AI assistant. Answer questions clearly and concisely."
MEMORY_WINDOW=20

# ── OpenAI ──
OPENAI_API_KEY=""
OPENAI_BASE_URL="https://api.openai.com/v1"

# ── DeepSeek ──
DEEPSEEK_API_KEY=""
DEEPSEEK_BASE_URL="https://api.deepseek.com/v1"

# ── Competition Model ──
COMPETITION_API_KEY=""
COMPETITION_BASE_URL=""
COMPETITION_MODEL_IDS=""
COMPETITION_USE_RAW_HTTP=false

# ── Microsoft OAuth2 ──
MICROSOFT_CLIENT_ID=""
MICROSOFT_CLIENT_SECRET=""
MICROSOFT_TENANT_ID="common"
MICROSOFT_REDIRECT_URI="http://localhost:8000/auth/callback"

# ── Frontend URL ──
FRONTEND_URL="http://localhost:5173"
